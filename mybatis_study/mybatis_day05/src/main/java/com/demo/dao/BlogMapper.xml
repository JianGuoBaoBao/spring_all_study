<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.dao.BlogMapper">

    <insert id="addBlog" parameterType="Blog">
        insert into mybatis_demo.blog (id, title, author, create_time, views)
        values (#{id},#{title},#{author},#{createTime},#{views});
    </insert>

    <!--sql片段-->
    <sql id="if-title-author">
        <if test="title != null">
            and title = #{title}
        </if>

        <if test="author != null">
            and author = #{author}
        </if>
    </sql>

    <!--where会自动去掉and或者or-->
    <select id="queryBlogIf" parameterType="map" resultType="Blog">
        select * from mybatis_demo.blog
        <where>
            <include refid="if-title-author"/>
        </where>

    </select>

    <!--和语法switch相似-->
    <select id="queryBlogChoose" parameterType="map" resultType="Blog">
        select * from mybatis_demo.blog
        <where>
            <choose>
                <when test="title != null">
                    title = #{title}
                </when>
                <when test="author != null">
                    and author = #{author}
                </when>
                <otherwise>
                    and views = #{views}
                </otherwise>
            </choose>
        </where>
    </select>


    <!--set元素会动态前置set,同时会删除无关的逗号-->
    <update id="updateBlog" parameterType="map">
        update mybatis_demo.blog
        <set>
            <if test="title != null">
                 title = #{title},
            </if>
            <if test="author != null">
                 author = #{author}
            </if>
        </set>
        where id = #{id}
    </update>


    <!--
        select * from mybatis.blog where 1=1 and (id=1 or id=2 or id=3)
        我们现在传递一个万能的map, 这个map中可以存在一个集合！
    -->
    <select id="queryBlogForeach" parameterType="map" resultType="Blog">
        select * from mybatis_demo.blog
        <where>
            <foreach collection="ids" item="id" open="and (" close=")" separator="or">
                id = #{id}
            </foreach>
        </where>
    </select>


</mapper>
